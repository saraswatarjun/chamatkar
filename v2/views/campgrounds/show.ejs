<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item">
                        Info 1
                    </li>
                    <li class="list-group-item active">
                        Info 2
                    </li>
                    <li class="list-group-item">
                        Info 3
                    </li>
                </div>
            </div>

            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%=campground.url %>">
                    <div class="caption-full">
                        <h4 class="pull-right">$5</h4>
                        <h4>
                            <a href="">
                                <%= campground.name %>
                            </a>
                        </h4>
                        <p>
                            <%=campground.description %>
                        </p>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%=campground._id %>/comments/new">Add New Comments </a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <b>
                                    <%= comment.author %>
                                </b>
                                <span class="pull-right"> 7 days ago</span>
                                <p>
                                    
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>


                        <% })%>

                </div>

            </div>
        </div>
    </div>